<div class="container-fluid">
  <h1>Defesas</h1>
  <p id="notice"><%= notice %></p>
  <div class="row">

    <%= link_to 'Nova defesa', new_defense_path, class: 'btn btn-primary' %>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Processo</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @defenses.each do |defense| %>
          <tr>
            <td><%= defense.proceeding %></td>
            <td><%= link_to 'Ver', defense %></td>
            <td><%= link_to 'Editar', edit_defense_path(defense) %></td>
            <td><%= link_to 'Excluir', defense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>