<div class="container-fluid">
  <h1>Medicação</h1>
  <p id="notice"><%= notice %></p>
  <div class="row">
    <%= link_to 'Cadastrar doença', new_medication_path, class: 'btn btn-primary' %>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Doença</th>
            <th>Remédio</th>
            <th>Situação</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @medications.each do |medication| %>
            <tr>
              <td><%= medication.disease %></td>
              <td><%= medication.medicine %></td>
              <td><%= medication.situation %></td>
              <td><%= link_to 'Ver', medication %></td>
              <td><%= link_to 'Editar', edit_medication_path(medication) %></td>
              <td><%= link_to 'Excluir', medication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
