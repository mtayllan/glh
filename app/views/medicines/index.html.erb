<h1>Medicines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Composition</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @medicines.each do |medicine| %>
      <tr>
        <td><%= medicine.name %></td>
        <td><%= medicine.composition %></td>
        <td><%= medicine.description %></td>
        <td><%= link_to 'Ver', medicine %></td>
        <td><%= link_to 'Editar', edit_medicine_path(medicine) %></td>
        <td><%= link_to 'Excluir', medicine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

