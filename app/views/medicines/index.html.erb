<div class="container-fluid">
  <h1>Remédios</h1>
  <p id="notice"><%= notice %></p>
  <div class="row">
    <%= link_to 'Cadastrar remédio', new_medicine_path, class: 'btn btn-primary' %>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Concentração/Composição</th>
            <th>Forma farmacêutica/Descrição</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @medicines.each do |medicine| %>
            <tr>
              <td><%= medicine.name %></td>
              <td style="white-space: pre"><%= medicine.composition.join("\n") %></td>
              <td style="white-space: pre"><%= medicine.description.join("\n") %></td>
              <td><%= link_to 'Ver', medicine %></td>
              <td><%= link_to 'Editar', edit_medicine_path(medicine) %></td>
              <td><%= link_to 'Excluir', medicine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>