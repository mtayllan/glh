<div class="container-fluid">
  <h1>Doenças</h1>
  <p id="notice"><%= notice %></p>
  <div class="row">
    <%= link_to 'Cadastrar doença', new_disease_path, class: 'btn btn-primary' %>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>CID</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @diseases.each do |disease| %>
            <tr>
              <td><%= disease.name %></td>
              <td><%= disease.description %></td>
              <td><%= disease.cid %></td>
              <td><%= link_to 'Ver', disease %></td>
              <td><%= link_to 'Editar', edit_disease_path(disease) %></td>
              <td><%= link_to 'Excluir', disease, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
